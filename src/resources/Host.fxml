<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/8"
            fx:controller="com.meti.app.Host">
    <children>
        <GridPane prefHeight="768.0" prefWidth="1024.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                  AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Host a Server:" GridPane.columnSpan="2"
                      GridPane.halignment="CENTER"/>
                <TextField fx:id="portField" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <GridPane.margin>
                        <Insets right="25.0"/>
                    </GridPane.margin>
                </TextField>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Port:" GridPane.halignment="CENTER"
                      GridPane.rowIndex="2"/>
                <Button mnemonicParsing="false" onAction="#back" text="Back" GridPane.rowIndex="3">
                    <GridPane.margin>
                        <Insets left="25.0"/>
                    </GridPane.margin>
                </Button>
                <Button mnemonicParsing="false" onAction="#next" text="Next" GridPane.columnIndex="1"
                        GridPane.halignment="RIGHT" GridPane.rowIndex="3">
                    <GridPane.margin>
                        <Insets right="25.0"/>
                    </GridPane.margin>
                </Button>
                <TextField fx:id="fileField" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets right="25.0"/>
                    </GridPane.margin>
                </TextField>
                <Button mnemonicParsing="false" onAction="#openViewer" text="Open File Viewer"
                        GridPane.halignment="CENTER" GridPane.rowIndex="1"/>
            </children>
        </GridPane>
    </children>
</AnchorPane>
